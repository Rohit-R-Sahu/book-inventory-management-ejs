<table
  class="table table-striped table-bordered caption-top align-middle text-center"
>
  <caption>
    List of Books
  </caption>
  <thead>
    <tr>
      <th scope="col">Sl. No.</th>
      <th scope="col">Book Name</th>
      <th scope="col">Book Details</th>
      <th scope="col">Book Image</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% books.forEach( (book)=>{ %>
    <tr>
      <th><%=book.id %></th>
      <td><%=book.name %></td>
      <td><%=book.detail %></td>
      <td><img src="<%= book.img%>" class="book-img" /></td>
      <td>
        <a class="btn btn-primary px-2">Update</a>
        <a class="btn btn-danger px-2">Delete</a>
      </td>
    </tr>
    <% }) %>
  </tbody>
</table>
